@keyframes fadeOutAnim 
  0% 
    opacity 1
  100% 
    opacity 0

.debug 
  position absolute
  background-color rgba(255, 0, 127, 0.3)
  animation-duration 1s


.fadeOut
  animation-name fadeOutAnim
